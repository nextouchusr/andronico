<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="eav_attribute_set">
        <column xsi:type="varchar"
                name="external_set_id"
                length="50"
                nullable="true"
                comment="External Set ID"/>
    </table>

    <table name="eav_attribute_option">
        <column xsi:type="varchar"
                name="external_option_id"
                length="10"
                nullable="true"
                comment="External Option ID"/>
    </table>

    <table name="eav_attribute_option_value">
        <column xsi:type="varchar"
                name="value"
                nullable="true"
                length="500"
                comment="Value"/>
    </table>
</schema>
