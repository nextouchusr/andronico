<?php

/** @var \Nextouch\GestLogis\Block\Adminhtml\Sales\Order\OrderService $block */

?>

<?php $item           = $block->getItem(); ?>
<?php $services       = $block->getServicesByItemId($item->getId()); ?>
<?php $helperObj      = $block->dataHelperObj(); ?>
<?php $currencySymbol = $helperObj->getCurrencySymbol(); ?>

<?php if ($services && $services->getSize()) : ?>
    <div class="gestlogis-postcode-order">
        <div class="options">
            <?php foreach ($services as $service) : ?>
                <p>
                    <span><?= $service->getServiceName(); ?></span>
                    <span><?= $service->getPrice(); ?>&nbsp;<?= $currencySymbol; ?></span>
                </p>
            <?php endforeach; ?>
        </div>
    </div>
<?php endif; ?>