<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="findomestic_paymentservice"
                   translate="label"
                   type="text"
                   sortOrder="1"
                   showInDefault="1"
                   showInWebsite="1"
                   showInStore="1">
                <label>Findomestic</label>

                <field id="active"
                       translate="label"
                       type="select"
                       sortOrder="1"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="0"
                       canRestore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="base_url"
                       translate="label"
                       type="text"
                       sortOrder="1"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="0"
                       canRestore="1">
                    <label>Base URL</label>
                    <validate>required-entry validate-url</validate>
                </field>

                <field id="partner_id"
                       translate="label"
                       type="text"
                       sortOrder="1"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="0"
                       canRestore="1">
                    <label>Partner ID</label>
                    <validate>required-entry</validate>
                </field>

                <field id="vendor_id"
                       translate="label"
                       type="text"
                       sortOrder="1"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="0"
                       canRestore="1">
                    <label>Vendor ID</label>
                    <validate>required-entry</validate>
                </field>

                <field id="title"
                       translate="label"
                       type="text"
                       sortOrder="1"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="1"
                       canRestore="1">
                    <label>Title</label>
                </field>

                <field id="order_status"
                       translate="label"
                       type="select"
                       sortOrder="1"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="0"
                       canRestore="1">
                    <label>New Order Status</label>
                    <source_model>Nextouch\Sales\Model\Config\Source\Order\Status\PendingPayment</source_model>
                </field>

                <field id="allowspecific"
                       translate="label"
                       type="allowspecific"
                       sortOrder="1"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="0"
                       canRestore="1">
                    <label>Payment from Applicable Countries</label>
                    <source_model>Magento\Payment\Model\Config\Source\Allspecificcountries</source_model>
                </field>

                <field id="specificcountry"
                       translate="label"
                       type="multiselect"
                       sortOrder="1"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="0"
                       canRestore="1">
                    <label>Payment from Specific Countries</label>
                    <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
                    <can_be_empty>1</can_be_empty>
                </field>

                <field id="instructions"
                       translate="label"
                       type="textarea"
                       sortOrder="1"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="1"
                       canRestore="1">
                    <label>Instructions</label>
                </field>

                <field id="sort_order"
                       translate="label"
                       type="text"
                       sortOrder="1"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="0"
                       canRestore="1">
                    <label>Sort Order</label>
                    <validate>validate-number</validate>
                </field>
            </group>
        </section>
    </system>
</config>
